            </li>
            <li>
                {{ form_label(form.tasaSupervivencia,'Tasa supervivencia') }}
                {{ form_errors(form.tasaSupervivencia) }}
                    <div class="elementoForm">{{ form_widget(form.tasaSupervivencia, {'attr':{'value':puesta.tasaSupervivencia } }) }}</div>
            </li>
            
            <li>
                {{ form_label(form.sexRatio,'Sex Ratio') }}
                {{ form_errors(form.sexRatio) }}
                    <div class="elementoForm">{{ form_widget(form.sexRatio, {'attr':{'value':puesta.sexRatio } }) }}</div>
            </li>
            <li>
                <fieldset data-role="controlgroup" data-type="horizontal">
