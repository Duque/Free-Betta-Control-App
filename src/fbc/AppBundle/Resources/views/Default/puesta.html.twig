{% extends 'fbcAppBundle:Default:index.html.twig' %}

{% block title %}{{puesta.codPuesta}}{% endblock %}

{% block h1 %}{{puesta.codPuesta}} -- {{alerta}}{% endblock %}

{% block contenido %}
    <form action="{{path('puesta',{'id':puesta.idPuesta})}}" method="post" {{ form_enctype(form) }}>
        {{ form_errors(form) }}{#Mostramos errores generales de formulario#}
        <ul class="margen1pc"  data-role="listview" data-inset="true">
            <li>
                {{ form_label(form.codPuesta,'Código') }}
                {{ form_errors(form.codPuesta) }}
                <div class="elementoForm">{{ form_widget(form.codPuesta, {'attr':{'value':puesta.codPuesta } }) }}</div>
            </li>
            <li>
                {{ form_label(form.idPadre,'Padre') }}
                {{ form_errors(form.idPadre) }}
                <div class="elementoForm">{{ form_widget(form.idPadre, {'attr':{'value':puesta.idPadre } }) }}</div>
            </li>
            <li>
                {{ form_label(form.idMadre,'Madre') }}
                {{ form_errors(form.idMadre) }}
                <div class="elementoForm">{{ form_widget(form.idMadre, {'attr':{'value':puesta.idMadre } }) }}</div>
            </li>
            <li>
                {{ form_label(form.huevos,'Huevos') }}
                {{ form_errors(form.huevos) }}
                    <div class="elementoForm">{{ form_widget(form.huevos, {'attr':{'value':puesta.huevos } }) }}</div>
            </li>
            <li>
                {{ form_label(form.eclosiones,'Eclosiones') }}
                {{ form_errors(form.eclosiones) }}
