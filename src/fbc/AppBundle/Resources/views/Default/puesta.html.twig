                {{ form_errors(form.fechaCruce) }}
                        <div class="elementoForm">{{ form_widget(form.fechaCruce) }}</div>
                </fieldset>
            </li>
            <li>
                <fieldset data-role="controlgroup" data-type="horizontal">
                {{ form_label(form.fechaEclosion,'Fecha de la eclosión') }}
                {{ form_errors(form.fechaEclosion) }}
                        <div class="elementoForm">{{ form_widget(form.fechaEclosion) }}</div>
                </fieldset>
            </li>
            <li><input type="submit" value="Modificar" data-role="button" data-theme="b"/></li>
        </ul>
            {{ form_rest(form) }}{#Cargamos el resto de campos (olvidados u ocultos#}

        

    </form>
{% endblock %}